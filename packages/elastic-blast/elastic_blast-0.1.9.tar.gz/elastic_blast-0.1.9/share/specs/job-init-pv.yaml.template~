apiVersion: batch/v1
kind: Job
metadata:
  name: init-pv
  labels:
    app: setup
spec:
  template:
    metadata:
      labels:
        app: setup
    spec:
      volumes: 
      - name: blastdb
        persistentVolumeClaim:
            claimName: blast-dbs-pvc
            readOnly: false
      containers:
        - name: get-blastdb
          image: gcr.io/ncbi-sandbox-blast/ncbi/blast:latest
          workingDir: /blast/blastdb
          volumeMounts:
          - name: blastdb
            mountPath: /blast/blastdb
            readOnly: false
          command: [ "/bin/sh", "-c" ]
          args:
          - /usr/bin/time -f "real %e\nuser %U\nsys %s\n%P\n%M" update_blastdb.pl ${ELB_DB} -decompress 2>init-pv.err
            gsutil cp init-pv.err gs://boratyng-test
      restartPolicy: Never
  backoffLimit: 3
