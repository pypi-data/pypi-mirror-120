aws-key-pair = workers-key
aws-subnet = subnet-a43744d3
aws-security-group = sg-6cae8d08
aws-job-role = arn:aws:iam::250813660784:role/cbb-research-db-batch-role


[cluster]
machine-type = m5.8xlarge
